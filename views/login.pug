- title = 'Login'
include include/head
- login = true
include include/navbar

.mx-auto.max-w-6xl.p-12
  .flex.flex-col.justify-center(class='md:flex-row')
    .shadow-md.bg-white.flex-auto.max-w-sm.p-10.pb-20
      p.text-sm.text-center.text-green-500 #{message}
      form(action='/login' method='post')
        .w-full
          .font-bold.h-6.mt-3.text-gray-600.text-xs.leading-8.uppercase
            span.text-red-400.mr-1 *
            | Username
          .my-2.bg-white.p-1.flex.border-b-2.border-red-300
            if id
              input.p-1.px-2.appearance-none.outline-none.w-full.text-gray-800(placeholder='Username' name='id' required='' value=`${id}` )
            else
              input.p-1.px-2.appearance-none.outline-none.w-full.text-gray-800(placeholder='Username' name='id' required='' )
          p.text-right.text-red-500.text-xs #{error.idError}
        .w-full
          .font-bold.h-6.mt-3.text-gray-600.text-xs.leading-8.uppercase
            span.text-red-400.mr-1 *
            | Password
          .my-2.bg-white.p-1.flex.border-b-2.border-red-300
            input.p-1.px-2.appearance-none.outline-none.w-full.text-gray-800(placeholder='Password' name='password' type='password' required='' autocomplete="off")
          p.text-right.text-red-500.text-xs #{error.passwordError}
        .mt-6.relative
          input.font-medium.py-2.px-4.text-red-300.cursor-pointer.bg-black.rounded.text-lg.tr-mt.absolute.text-center.w-full(class='hover:text-red-400' type='submit' value='Login')
