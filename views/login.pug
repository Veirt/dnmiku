doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title DN Miku | Login
    link(rel='stylesheet', type='text/css', href='/css/signUp.css')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Quicksand|Palanquin')
nav
    .nav-item
        ul
            li.nav-not-active
                a(href='/') Home
            li.nav-not-active
                a(href='/download') Download
            li.nav-not-active
                a(href='/register') Register
            li.nav-active
                a(href='/login') Login
section.signup
    .container
        .signup-content
            form#signup-form.signup-form(action='/login', method='POST')
                h2.form-title Login
                if message
                    p(style={color: 'green'}) Registered Successfully
                .form-group
                    if id
                        input#id.form-input(type='text', name='id', placeholder='Username', value=`${id}`)
                    else
                        input#id.form-input(type='text', name='id', placeholder='Username')
                    small.error #{idError}
                .form-group
                    input#password.form-input(type='password', name='password', placeholder='Password')
                    small.error #{passwordError}
                input#submit.form-submit(type='submit', value='Login')