- title = 'Home'
include include/head
- home = true
include include/navbar

header
  .w-full.bg-cover.bg-center(style="height:32rem; background-image:\
  url('/img/redLotus.jpg');")
    .flex.items-center.justify-center.h-full.w-full.bg-gray-900.bg-opacity-50
      .text-center
        h1.text-white.text-2xl.font-semibold.uppercase(class='md:text-3xl')
          | DN 
          span.text-red-300 Miku
.min-w-screen.flex.items-center.justify-center.px-5.py-5
  .w-full.max-w-3xl
    .-mx-2(class='md:flex')
      .w-full.px-2(class='md:w-1/3')
        .rounded-lg.shadow-sm.mb-4
          .rounded-lg.bg-white.shadow-lg.relative.overflow-hidden(class='md:shadow-xl')
            .px-3.pt-8.pb-10.text-center.relative
              i.fa.fa-user.mb-4.text-3xl
              h4.text-sm.text-black.uppercase.text-red-400 Accounts
              h3.text-3xl.text-black.font-semibold.leading-tight.my-3 #{nowTotalAccount}
      .w-full.px-2(class='md:w-1/3')
        .rounded-lg.shadow-sm.mb-4
          .rounded-lg.bg-white.shadow-lg.relative.overflow-hidden(class='md:shadow-xl')
            .px-3.pt-8.pb-10.text-center.relative
              i.fa.fa-users.mb-4.text-3xl
              h4.text-sm.uppercase.text-red-400.text-black.leading-tight Characters
              h3.text-3xl.text-gray-700.font-semibold.leading-tight.my-3 #{nowTotalCharacter}
      .w-full.px-2(class='md:w-1/3')
        .rounded-lg.shadow-sm.mb-4
          .rounded-lg.bg-white.shadow-lg.relative.overflow-hidden(class='md:shadow-xl')
            .px-3.pt-8.pb-10.text-center.relative
              i.fa.fa-globe.mb-4.text-3xl
              h4.text-sm.uppercase.text-red-400.text-black.leading-tight Online
              h3.text-3xl.text-gray-700.font-semibold.leading-tight.my-3 #{nowOnline}
