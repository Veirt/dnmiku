doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title DN Miku | Dashboard
    script(src='https://kit.fontawesome.com/36c08e2acc.js', crossorigin='anonymous')
    link(rel='stylesheet', type='text/css', href='/css/style.css')
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Quicksand|Palanquin')
nav
    .nav-item
        ul
            li.nav-not-active
                a(href='/') Home
            li.nav-active
                a(href='/dashboard') Dashboard
            li.nav-not-active
                a(href='/logout') Log out
h1.title Account Name
h2.title #{user.AccountName}
section.dashboard
    .account-dashboard
        if gotCash
            p(style={color: 'green'}) You got #{gotCash}
        h1 Cash
        p #{user.cash}
        form(action='/dashboard/api/cash', method="post")
            if user.claimDaily === 1
                input(type="submit", value="Claim" disabled)    
            else
                input(type="submit", value="Claim" ) 
    .account-dashboard
        h1 Cash Point
            if chars
                form(action='/dashboard/api/ftg', method="post")
                    select(name='CharacterID')
                        each char in chars
                            option(value=`${char.CharacterID}`) #{char.CharacterName}, Point : #{char.Point}

                    input(type="submit", value="Buy FTG")


table(border=1, width='15%', align='center')
    tr
        th Character Name
        th FTG
    if charStats
        each char in charStats
            tr
                td= char.CharacterName
                td= char.Fatigue

if error
    script().
        if ( window.history.replaceState ) {
                window.history.replaceState( null, null, window.location.href );
            }
        alert("#{error}")